<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/Login_Phone_A"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.zoomtic.tamilswipe.Accounts.Login_Phone_A">
    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewfillper">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/my_mobile_number"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/sf_ui_display_bold"
                    />

                <TextView
                    android:id="@+id/select_country"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_bg"
                    android:drawableRight="@drawable/ic_arrow_down"
                    android:paddingRight="20dp"
                    android:drawablePadding="10dp"
                    android:hint="Country"
                    android:textColorHint="@color/text_hint"
                    android:textColor="@color/dimgray"
                    android:textSize="28dp"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:fontFamily="@font/sf_ui_display_semibold"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:gravity="center"
                        >

                        <TextView
                            android:id="@+id/countrycodetxt"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/round_bg"
                            android:text="+1"
                            android:textColor="@color/dimgray"
                            android:fontFamily="@font/sf_ui_display_semibold"
                            android:textSize="28sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        >

                        <EditText
                            android:id="@+id/phoneText"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:textAlignment="textStart"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:paddingLeft="20dp"
                            android:background="@drawable/round_bg"
                            android:gravity="left|center"
                            android:hint="@string/_7xxxxxxxxxxx"
                            android:textColor="@color/dimgray"
                            android:textColorHint="@color/text_hint"
                            android:textSize="28sp"
                            android:inputType="number"
                            android:fontFamily="@font/sf_ui_display_semibold"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/sf_ui_display_semibold"
                    android:lineSpacingExtra="0dp"
                    android:text="@string/message_phone"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/sign_btn"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginTop="30dp"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_button_normal"
                    android:fontFamily="@font/sf_ui_display_bold"
                    android:background="@drawable/btn_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/sf_ui_display_semibold"
                    android:text="Or"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_fb"/>

                    <TextView
                        android:id="@+id/textView_sign_facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="20sp"
                        android:text="Sign up with Facebook"
                        android:fontFamily="@font/sf_ui_display_bold"
                        android:textColor="#1877f2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="We don't post anything to"
                        android:fontFamily="@font/sf_ui_display_semibold"
                        android:textColor="@color/gray"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_fb"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView_terms_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/sf_ui_display_semibold"
                android:linksClickable="true"
                android:lineSpacingExtra="5dp"
                android:text="@string/terms_and_privacy_signup"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="@color/gray" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:visibility="gone"
                android:id="@+id/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:background="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Back"
                        android:textAllCaps="false"
                        android:onClick="Goback"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/lightblack"
                        android:background="@color/transparent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/font_size_heading"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Verify Phone" />

                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:background="#fdfdfd"
                android:orientation="vertical"
                android:layout_below="@+id/toolbar2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:id="@+id/te"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:gravity="start"
                        android:text="Verify your\nphone number."
                        android:textColor="@color/black"
                        android:textSize="40sp"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/sf_ui_display_bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="We sent you a code to verify your phone number"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="@font/sf_ui_display_semibold"
                        android:layout_marginRight="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_ui_display_bold"
                        android:text="+7195110086772"
                        android:textAlignment="center"
                        android:textColor="@color/app_color"
                        android:textSize="28dp"
                        android:id="@+id/sendtotxt"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginTop="30dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/codelayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/digitone"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:background="@drawable/round_bg_1"
                            android:ems="1"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="35sp" />

                        <EditText
                            android:id="@+id/digittwo"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/round_bg_1"
                            android:ems="1"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="35sp" />

                        <EditText
                            android:id="@+id/digitthree"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/round_bg_1"
                            android:ems="1"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="35sp" />

                        <EditText
                            android:id="@+id/digitfour"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/round_bg_1"
                            android:ems="1"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="35sp" />

                        <EditText
                            android:id="@+id/digitfive"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/round_bg_1"
                            android:ems="1"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="35sp" />

                        <EditText
                            android:id="@+id/digitsix"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/round_bg_1"
                            android:ems="1"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="35sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sf_ui_display_semibold"
                            android:text="I did't receive the code.    "
                            android:textColor="@color/black"
                            android:textSize="15dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/akrobat_bold"
                            android:onClick="resendCode"
                            android:text="Resend"
                            android:textColor="@color/app_color"
                            android:textSize="18dp" />

                    </LinearLayout>


                </LinearLayout>

                <Button
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/btn_selector"
                    android:id="@+id/confirmbtn"
                    android:text="Confirm"
                    android:fontFamily="@font/sf_ui_display_bold"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_button_normal"
                    android:onClick="verifyCode"
                    />

            </LinearLayout>

        </RelativeLayout>

    </ViewFlipper>
</RelativeLayout>
